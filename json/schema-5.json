{
	"$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://example.org/players-schema.json",
    "type": "array",
   	"title": "Players",
    "minItems": 1,
    "items":{
        "type": "object",
        "title": "Player",
        "properties": {
            "type": {
                "type": "string",
                "format": "iri"
            },
            "iri": {
                "type": "string",
                "format": "iri"
            },
            "name": {
                "type": "object",
                "required": [
                    "en"
                ],
                "properties": {
                    "en": {
                        "type": "string"
                    }
                }
            },
            "nickname": {
                "type": "object",
                "required": [
                    "en"
                ],
                "properties": {
                    "en": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            },
            "jerseys": {
                "type": "array",
                "items": {
                    "type": "string",
                    "format": "iri"
                }
            },
            "xfactors": {
                "type": "array",
                "items": {
                    "type": "string",
                    "format": "iri"
                }
            },
            "teams": {
                "type": "array",
                "items": {
                    "type": "string",
                    "format": "iri"
                }
            }
        },
        "required": [
            "iri",
            "name"
        ]
    }
}
